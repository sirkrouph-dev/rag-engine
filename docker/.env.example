# ================================
# RAG Engine Production Environment Variables
# ================================
# SECURITY WARNING: This file contains sensitive information.
# Do NOT commit this file to version control.
# Copy this file to .env and fill in your actual values.

# ================================
# Application Settings
# ================================
RAG_ENGINE_ENV=production

# ================================
# Database Configuration
# ================================
DB_NAME=rag_engine
DB_USER=rag_user
DB_PASSWORD=change_me_secure_password
DB_HOST=postgres
DB_PORT=5432

# ================================
# Redis Configuration
# ================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change_me_redis_password

# ================================
# Security Settings
# ================================
JWT_SECRET_KEY=change_me_jwt_secret_key_at_least_32_characters_long
ENCRYPTION_KEY=change_me_encryption_key_32_characters

# ================================
# AI Service API Keys
# ================================
OPENAI_API_KEY=your_openai_api_key_here
HUGGINGFACE_API_TOKEN=your_huggingface_token_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ================================
# Vector Database Configuration
# ================================
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment
PINECONE_INDEX=your_pinecone_index_name

# ================================
# Monitoring & Logging
# ================================
GRAFANA_PASSWORD=change_me_grafana_admin_password
PROMETHEUS_RETENTION_TIME=200h
LOG_LEVEL=INFO

# ================================
# SSL Configuration (Optional)
# ================================
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ================================
# Backup Configuration
# ================================
BACKUP_S3_BUCKET=your_backup_bucket_name
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# ================================
# External Services (Optional)
# ================================
SENTRY_DSN=your_sentry_dsn_for_error_tracking
STRIPE_SECRET_KEY=your_stripe_secret_key_for_billing
